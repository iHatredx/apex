{
    "version": 8,
    "name": "Galactic Custom Style",
    "sources": {
        "background": {
            "type": "image",
            "url": " https://images.unsplash.com/photo-1517816743773-6e0fd518b4a6",
            "coordinates": [
                [-180, 85],
                [180, 85],
                [180, -85],
                [-180, -85]
            ]
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "raster",
            "source": "background",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "raster-opacity": 0.8
            }
        },
        {
            "id": "land",
            "type": "background",
            "paint": {
                "background-color": "#000000"
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "mapbox",
            "source-layer": "water",
            "paint": {
                "fill-color": "#0a0a2a"
            }
        },
        {
            "id": "places",
            "type": "symbol",
            "source": "mapbox",
            "source-layer": "place_label",
            "layout": {
                "text-field": "{name_en}",
                "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
                "text-size": 12
            },
            "paint": {
                "text-color": "#ffffff",
                "text-halo-color": "#000000",
                "text-halo-width": 1
            }
        }
    ],
    "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
    "sprite": "mapbox://sprites/mapbox/streets-v11"
}
